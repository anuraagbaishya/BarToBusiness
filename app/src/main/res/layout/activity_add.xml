<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_activity_scroll_view"
    tools:context="com.appex.barcards.activities.AddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        tools:context="com.appex.barcards.activities.AddActivity">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:id="@+id/name_edit_text"
            android:hint="@string/name"
            android:textSize="15sp"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:id="@+id/position_edit_text"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="@string/position"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:id="@+id/company_edit_text"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="@string/company"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_margin="5dp"
            android:id="@+id/phone_edit_text"
            android:textSize="15sp"
            android:hint="@string/phone"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/email_edit_text"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="@string/email"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:id="@+id/add_line1_edit_text"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="@string/add_line1"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:id="@+id/add_line2_edit_text"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="@string/add_line2"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:id="@+id/add_line3_edit_text"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="@string/add_line3"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/add"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:id="@+id/button"
            android:layout_margin="5dp"/>


    </LinearLayout>
</ScrollView>
